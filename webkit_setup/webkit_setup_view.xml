<?xml version="1.0"?>
<openerp>
    <data>
		<record id="webkit_setup_config_view_form" model="ir.ui.view">
		    <field name="name">webkit.setup.config.view</field>
		    <field name="model">webkit.setup.config</field>
		    <field name="inherit_id" ref="base.res_config_view_base"/>
		    <field name="arch" type="xml">
			    <group string="res_config_contents" position="replace">
			        <label colspan="4" align="0.0" string="Webkit Path:"/>
			        <field colspan="2" name="webkit_path"/>
			        <label colspan="4" align="0.0" string="Existing Paths:"/>
			        <field colspan="2" name="existing_paths" on_change="onchange_path(existing_paths, context)"/>
			    </group>
			</field>
		</record>
		<record id="webkit_setup_config_window" model="ir.actions.act_window">
		    <field name="name">Webkit Setup Config</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">webkit.setup.config</field>
		    <field name="view_type">form</field>
		    <field name="view_id" ref="webkit_setup_config_view_form"/>
		    <field name="view_mode">form</field>
		    <field name="target">new</field>
		</record>
		<record id="webkit_setup_config_step" model="ir.actions.todo">
			<field name="name">Set Your Webkit Path </field>
			<field name="type">automatic</field>
		    <field name="action_id" ref="webkit_setup_config_window"/>
		</record>
   </data>
</openerp>